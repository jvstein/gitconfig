[user]
    name = Jeff Stein
[advice]
    detachedHead = false
    statusHints = false
[color]
    diff = auto
    status = auto
    branch = auto
    grep = auto
    interactive = auto
    ui = true
[interactive]
    diffFilter = delta --color-only
[merge]
    tool = vimmerge
    conflictstyle = diff3
[mergetool]
    trustExitCode = true
    prompt = false
    keepBackup = false
    writeToTemp = true
[mergetool "vimmerge"]
    cmd = git-vimmerge vim $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
[core]
    pager = delta
[diff]
    algorithm = histogram
    context = 10
    external = git-diff-wrapper
    mnemonicPrefix = true
    renames = copies
    submodule = log
    tool = vimdiff
    colorMoved = default
    # Switch this to false after git 2.45 and use srcPrefix and dstPrefix instead.
    noprefix = true
    srcPrefix = "SRC "
    dstPrefix = "DST "
[diff "exif"]
    textconv = identify -verbose
    cachetextconv = true
[diff "html"]
    xfuncname = html
[diff "image"]
    textconv = img2ascii -p 2 -w 2
    cachetextconv = true
    extdiffcmd = vimdiff -c 'windo diffoff' -c 'windo set nowrap' -c 'windo AnsiEsc'
[diff "image-kitty"]
    extdiffcmd = kitty +kitten diff
[diff "java"]
    xfuncname = java
[diff "python"]
    xfuncname = python
[diff "csv"]
    textconv = csv2txt
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[grep]
    patternType = perl
[pager]
    diff =
    branch =
[status]
    submoduleSummary = true
[alias]
    ca = commit --amend
    can = commit --amend --no-edit
    cm = commit --message
    cmn = commit --no-verify --message
    co = checkout
    dn = diff --no-ext-diff
    dc = diff --cached
    l = ls-files
    lol = log --graph --pretty=format:'%C(yellow)%h%C(auto)%d%C(reset) %s %C(cyan)[%an] %C(green)[%aI] %C(yellow)[%ar]%C(reset)' --abbrev-commit --author-date-order
    lolnc = log --graph --pretty=format:'%h%d %s [%an] [%aI] [%ar]' --abbrev-commit --author-date-order
    st = status -s
    sc = log --stat --patch --max-count=1
    scf = diff-tree --no-commit-id --name-only -r
    rb = "!f() { BASE=$(git rev-parse --abbrev-ref --symbolic-full-name @{u}); if [ X\"$BASE\" = X\"\" ]; then echo 'no base'; else git rebase -i \"$BASE\"; fi; }; f"
    rs = "!f() { EDITOR=\"sed -i '2,/^$/s/^pick\\b/s/'\" git rebase -i \"$@\"; }; f"
    ignore = update-index --add --assume-unchanged
    unignore = update-index --no-assume-unchanged
    fixws = !"\
      if (! git diff-files --quiet .) && \
         (! git diff-index --quiet --cached HEAD) ; then \
        git commit --no-verify -m FIXWS_SAVE_INDEX && \
        git stash save FIXWS_SAVE_TREE && \
        git rebase --whitespace=fix HEAD~ && \
        git reset --soft HEAD~ && \
        git stash pop ; \
      elif (! git diff-index --quiet --cached HEAD) ; then \
        git commit --no-verify -m FIXWS_SAVE_INDEX && \
        git rebase --whitespace=fix HEAD~ && \
        git reset --soft HEAD~ ; \
      fi"
    fixws-all = !"\
      if (! git diff-files --quiet .) && \
         (! git diff-index --quiet --cached HEAD) ; then \
        git commit --no-verify -m FIXWS_SAVE_INDEX && \
        git add -u :/ && \
        git commit --no-verify -m FIXWS_SAVE_TREE && \
        git rebase --whitespace=fix HEAD~2 && \
        git reset HEAD~ && \
        git reset --soft HEAD~ ; \
      elif (! git diff-files --quiet .) ; then \
        git add -u :/ && \
        git commit --no-verify -m FIXWS_SAVE_TREE && \
        git rebase --whitespace=fix HEAD~ && \
        git reset HEAD~ ; \
      elif (! git diff-index --quiet --cached HEAD) ; then \
        git commit --no-verify -m FIXWS_SAVE_INDEX && \
        git rebase --whitespace=fix HEAD~ && \
        git reset --soft HEAD~ ; \
      fi"
[tgit]
    logminsize = 5
    logwidthmarker = 80
[pull]
    ff = only
[push]
    default = current
[help]
    autocorrect = 1
[gui]
    editor = geany
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[filter "tabspace"]
    smudge = expand --tabs=4
    clean = unexpand --tabs=4
[filter "tabspace2"]
    smudge = expand --tabs=2
    clean = unexpand --tabs=2

#[url "ssh://git@github.com/"]
#   insteadOf = https://github.com/
[url "https://github.com/"]
    insteadOf = git://github.com/

# local machine overrides
[include]
    path = ~/.gitconfig.local
[init]
    defaultBranch = main
[credential]
    helper = cache
[rebase]
    autosquash = true
    instructionFormat = %s [%an] [%ad]
[rerere]
    enabled = true
    autoupdate = true
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    hyperlinks = true
[transfer]
    fsckobjects = true
[fetch]
    fsckobjects = true
    prune = true
    prunetags = true
[receive]
    fsckobjects = true
[log]
    date = iso
